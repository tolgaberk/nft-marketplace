// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {

  id    Int     @id @default(autoincrement())
  email String? @unique
  name  String?

  @@map(name: "users")
}

model Transaction {
  id Int @id @default(autoincrement())

  @@map(name: "transactions")
}

model NFT {
  id Int @id @default(autoincrement())

  @@map(name: "nfts")
}

model Auction {
  id Int @id @default(autoincrement())

  @@map(name: "auctions")
}

model Bid {
  id Int @id @default(autoincrement())

  @@map(name: "bids")
}

model Role {
  id Int @id @default(autoincrement())

  @@map(name: "roles")
}

model Profile {
  id Int @id @default(autoincrement())

  @@map(name: "profiles")
}

model Badge {
  id Int @id @default(autoincrement())

  @@map(name: "badges")
}

model Asset {
  id Int @id @default(autoincrement())

  @@map(name: "assets")
}

model Collection {

  id Int @id @default(autoincrement())
  @@map(name: "collections")
}
